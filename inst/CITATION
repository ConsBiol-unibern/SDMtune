year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{SDMsel}: Species Distribution Model Selection",
         author = c(person("Sergio", "Vignali"),
                    person("Arnaud", "Barras"),
                    person("Veronika", "Braunisch")),
         year = year,
         note = note,
         url = "https://github.com/sgvignali/SDMsel")
