year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
url <- "https://github.com/ConsBiol-unibern/SDMtune"

citHeader("To cite SDMtune in publications, please use:")

citEntry(entry = "Manual",
  author = c(person("Sergio", "Vignali"),
             person("Arnaud", "Barras"),
             person("Veronika", "Braunisch")),
  title = "SDMtune: Species Distribution Model Selection",
  year = year,
  note = note,
  url = url,
  textVersion = paste0("Vignali S, Barras A, Braunisch V, 2019. SDMtune: Species Distribution Model Selection. ", note, ".")
)
