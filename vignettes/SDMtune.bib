journal = {Ecological Modelling},
keywords = {Distribution,Maximum entropy,Modeling,Niche,Range * Corresponding author Tel: +1 973 360 8704},
pages = {231--259},
title = {{Maximum entropy modeling of species geographic distributions}},
url = {https://www.cs.princeton.edu/{~}schapire/papers/ecolmod.pdf},
volume = {190},
