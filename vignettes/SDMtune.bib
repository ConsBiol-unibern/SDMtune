issn = {00359009},
journal = {Quarterly Journal of the Royal Meteorological Society},
keywords = {Forecast verification,Mann-Whitney U-test,Probabilistic forecasts,Signal-detection theory,Student's t-test},
pages = {2145--2166},
title = {{Areas beneath the relative operating characteristics (ROC) and relative operating levels (ROL) curves: Statistical significance and interpretation}},
volume = {128},
